{
  "name": "quickjs-emscripten-sync",
  "author": "rot1024",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "e2e:build": "yarn --cwd e2e run build",
    "e2e:test": "cypress run"
  },
  "peerDependencies": {
    "quickjs-emscripten": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/cypress/"
    ]
  },
  "module": "dist/quickjs-emscripten-sync.esm.js",
  "size-limit": [
    {
      "path": "dist/quickjs-emscripten-sync.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/quickjs-emscripten-sync.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "cypress": "^6.8.0",
    "husky": "^6.0.0",
    "quickjs-emscripten": "^0.11.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  }
}
